<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_menu" >

    <HorizontalScrollView
        android:layout_width="720dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="10dip" >

        <com.imax.ipt.ui.layout.IPTTextView
            android:id="@+id/txtMediaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dip"
            android:scrollbarStyle="insideInset"
            android:singleLine="true"
            android:textAppearance="@style/ActiveText"
            android:textSize="30pt" />
    </HorizontalScrollView>

    <com.imax.ipt.ui.widget.gridview.IPTGridView
        android:id="@+id/gridview"
        android:layout_marginTop="80dip"
        android:layout_marginLeft="20dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fastScrollEnabled="true"
        android:focusable="true"
        app:cacheColorHint="@android:color/transparent"
        app:columnWidth="115dip"
        app:gravity="center"
        app:numColumns="auto_fit"
        app:numRows="auto_fit"
        app:rowHeight="170dip"
        app:scrollDirectionLandscape="horizontal"
        app:stretchMode="spacingWidthUniform" >
    </com.imax.ipt.ui.widget.gridview.IPTGridView>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ipt_gui_asset_vert_divider_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dip"
            android:scaleType="fitXY"
            android:src="@drawable/ipt_gui_asset_vert_divider_section" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ipt_gui_asset_vert_divider_bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ipt_gui_asset_vert_divider_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="500dip"
            android:scaleType="fitXY"
            android:src="@drawable/ipt_gui_asset_vert_divider_section" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ipt_gui_asset_vert_divider_bottom" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="-5dip"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_close_button" />

</RelativeLayout>