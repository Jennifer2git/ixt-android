<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is proper the menu , We have only 1 user interface -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catalogue_secondary_nav_bar">

	<include
			android:id="@+id/btnVolumeConNowPlaying"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp"
			layout="@layout/layout_volume"

			>

	</include>

	<ImageView
			android:id="@+id/img_nowplaying_div"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginTop="0dp"
			android:src="@drawable/dvd_fullwidth_active_line"
			android:background="@android:color/transparent"/>

	<ImageView
			android:id="@+id/imgPoster"
			android:layout_width="60dip"
			android:layout_height="60dp"
			android:layout_marginLeft="15dip"
			android:layout_centerVertical="true"
			android:background="@android:color/transparent"
			android:src="@drawable/player_poster_mask"/>


	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/txtNowPlaying"
			android:layout_width="110dip"
			android:layout_height="20dip"
			android:layout_marginLeft="10dip"
			android:layout_toRightOf="@id/imgPoster"
			android:layout_alignParentTop="true"
			android:layout_marginTop="10dp"
			android:padding="3dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:text="@string/now_playing"
			android:textAppearance="@style/smallInActiveText"
			android:textSize="12sp"/>

	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/txtTitle"
			android:layout_width="150dip"
			android:layout_height="20dip"
			android:layout_marginLeft="10dip"
			android:layout_toRightOf="@+id/imgPoster"
			android:layout_marginTop="5dp"
			android:paddingLeft="3dp"
			android:layout_below="@id/txtNowPlaying"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/smallInActiveText"
			android:textSize="12sp"/>

	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/txtSubtitle1"
			android:layout_width="150dip"
			android:layout_height="40dip"
			android:layout_marginLeft="10dip"
			android:layout_marginTop="5dp"
			android:layout_below="@id/txtTitle"
			android:layout_toRightOf="@+id/imgPoster"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/smallActiveText"
			android:textSize="12sp"
			/>

	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/txtSubtitle2"
			android:layout_width="150dip"
			android:layout_height="20dip"
			android:layout_marginLeft="10dip"
			android:layout_toRightOf="@+id/imgPoster"
			android:layout_marginTop="5dp"
			android:layout_below="@id/txtTitle"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/smallActiveText"
			android:textSize="12sp"/>

	<ImageButton
			android:id="@+id/btnPlayPause"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@id/btnVolumeConNowPlaying"
			android:layout_marginRight="20dp"
			android:background="@drawable/selector_play_pause_full_button"
			/>
<!--
	<include
			android:id="@+id/btnPlayConNowPlaying"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			layout="@layout/layout_play_control_simple"
			>

	</include>

-->



</RelativeLayout>