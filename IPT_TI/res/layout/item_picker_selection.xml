<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.imax.ipt.ui.layout.IPTTextView
        android:id="@+id/txtAlphaOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dip"
        android:gravity="center"
        android:text="A"
        android:textAppearance="@style/smallActiveText"
        android:textSize="10pt"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/pickerCircle"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:src="@drawable/ipt_gui_asset_alpha_slider_circle"
            android:visibility="invisible"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/txtOption"
            android:layout_width="41dp"
            android:layout_height="83dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/ipt_gui_asset_alpha_slider_circle_transparent2"
            android:textAppearance="@style/smallActiveText"
            android:textSize="8pt" />
    </FrameLayout>

</RelativeLayout>