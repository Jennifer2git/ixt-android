<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ipt_gui_asset_bg" >

    <ImageButton
        android:id="@+id/btnVolMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dip"
        android:layout_x="6dp"
        android:layout_y="634dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_vol_mute_button" />

    <com.imax.ipt.ui.layout.IPTTextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="40dp"
        android:text="@string/now_playing"
        android:textSize="30pt" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="2dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_back_button" />

    <com.imax.ipt.ui.widget.verticalseekbar.VerticalSeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="wrap_content"
        android:layout_height="363dp"
        android:layout_x="6dp"
        android:layout_y="208dp"
        android:progressDrawable="@drawable/selector_vol_seek_bar"
        android:thumb="@drawable/ipt_gui_asset_vol_knob_active_down" />

    <com.imax.ipt.ui.layout.IPTTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="206dp"
        android:layout_y="371dp"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="true"
        android:text="@string/ir_not_configured"
        android:textAppearance="@style/smallActiveText"
        android:textSize="10pt" />

    <Button
        android:id="@+id/btnVideoMode"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:layout_x="1179dp"
        android:layout_y="458dp"
        android:background="@drawable/selector_tv_num_full_button"
        android:text="@string/video_format"
        android:textAppearance="@style/smallActiveText"
        android:textColor="#ffffff"
        android:textSize="6pt" />

    <ImageButton
        android:id="@+id/btnMultiview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1179dp"
        android:layout_y="560dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_master_menu"
        android:src="@drawable/selector_remote_multiview_button" />

    <FrameLayout
        android:id="@+id/statusNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/masterMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</AbsoluteLayout>