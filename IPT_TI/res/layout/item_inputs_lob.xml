<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_centerInParent="true"

        >
    <!--
    android:background="@drawable/list_selector2"
                android:layout_width="205dp"
                android:layout_height="125dp" -->
<LinearLayout
        android:id="@+id/ll_item_lobby"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >
    <ImageView
            android:id="@+id/img_input_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dvd_loading_icn"
            />

    <com.imax.ipt.ui.layout.IPTTextView
            android:id="@+id/txt_input_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="input name"
            android:textColor="@drawable/selector_txt_color"
            android:textAppearance="@style/smallActiveText"
            android:gravity="center"
            android:textSize="20sp"
            />

</LinearLayout>


</LinearLayout>