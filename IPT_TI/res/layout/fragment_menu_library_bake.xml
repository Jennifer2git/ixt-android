<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is proper the menu , We have only 1 user interface -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

     >

    <com.imax.ipt.ui.widget.horizontallistview.HorizontalListView
            android:id="@+id/list_movie_sort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="310dp"
            >

    </com.imax.ipt.ui.widget.horizontallistview.HorizontalListView>

    <com.imax.ipt.ui.widget.horizontallistview.HorizontalListView
            android:id="@+id/list_movie_sub_sort"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            >

    </com.imax.ipt.ui.widget.horizontallistview.HorizontalListView>

    <com.imax.ipt.ui.layout.MenuView
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="90dip"
        android:background="@drawable/shape_menu"
        android:minWidth="260dip"
        android:clickable="true"
        android:alpha="0.9"
        android:visibility="visible"

        />

    <com.imax.ipt.ui.layout.IPTTextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="true"
        android:textAppearance="@style/ActiveText"
        android:textSize="30pt"
            android:visibility="gone"/>



