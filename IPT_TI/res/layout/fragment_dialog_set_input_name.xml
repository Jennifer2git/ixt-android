<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/night_blue">

	<EditText
			android:id="@+id/edit_input_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:layout_centerInParent="true"
	        android:hint="@string/strEditInputNameHint"
	        android:drawableBottom="@drawable/edit_text_line"
	        android:textColorHint="@color/gray_light"
	        android:textSize="26sp"
	        android:maxLines="4"
	        android:gravity="center"
	        android:textColor="@color/gold"
	        android:background="@android:color/transparent"

			/>

	<Button
			android:id="@+id/btnOk"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_below="@id/edit_input_name"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:background="@drawable/selector_dialog_num"
			android:textSize="30dp"
			android:text="ok"
			android:textColor="@color/gray_light"
			/>


</RelativeLayout>