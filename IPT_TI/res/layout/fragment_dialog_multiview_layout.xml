<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_menu" >

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_close_button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btnMultiViewFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ipt_gui_asset_multiview_layout_btn_full_active" />

        <ImageButton
            android:id="@+id/btnMultiView4Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ipt_gui_asset_multiview_layout_option_4up_inactive" />

        <ImageButton
            android:id="@+id/btnMultiView3top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ipt_gui_asset_multiview_layout_option_3top_inactive" />

        <ImageButton
            android:id="@+id/btnMultiView3right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ipt_gui_asset_multiview_layout_option_3right_inactive" />

        <ImageButton
            android:id="@+id/btnMultiView3bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ipt_gui_asset_multiview_layout_option_3bottom_inactive" />
    </LinearLayout>

</RelativeLayout>