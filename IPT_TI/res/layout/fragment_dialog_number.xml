<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/night_blue">


	<TableLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_centerInParent="true"
	             android:layout_margin="10dp"
	             android:divider="@drawable/diver_line_v"
	             android:showDividers="middle">

		<TableRow android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:divider="@drawable/diver_line_large"
		          android:showDividers="middle"
				>

			<Button android:id="@+id/num1"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="1">

			</Button>

			<Button android:id="@+id/num2"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"

			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="2">

			</Button>
			<Button android:id="@+id/num3"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"

			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="3"/>

		</TableRow>

		<TableRow android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:divider="@drawable/diver_line_large"
		          android:showDividers="middle"
				>


			<Button android:id="@+id/num4"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"

			        android:textColor="@color/gray_light"

			        android:textSize="@dimen/txtPin"
			        android:text="4">

			</Button>

			<Button android:id="@+id/num5"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="5">

			</Button>

			<Button android:id="@+id/num6"
			        android:layout_height="50dp"
			        android:layout_width="50dp"

			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="6">

			</Button>
		</TableRow>


		<TableRow android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:divider="@drawable/diver_line_large"
		          android:showDividers="middle"
				>

			<Button android:id="@+id/num7"
			        android:layout_height="50dp"
			        android:layout_width="50dp"

			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="7">

			</Button>

			<Button android:id="@+id/num8"
			        android:layout_height="50dp"
			        android:layout_width="50dp"

			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="8">

			</Button>

			<Button android:id="@+id/num9"
			        android:layout_height="50dp"
			        android:layout_width="50dp"

			        android:background="@drawable/selector_dialog_num"
			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="9">

			</Button>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:divider="@drawable/diver_line_large"
		          android:showDividers="middle"
				>

			<Button
					android:id="@+id/btnCancel"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/selector_dialog_num"

					android:text="C"
					android:textSize="@dimen/txtPin"
					android:textColor="@color/gray_light"/>

			<Button android:id="@+id/num0"
			        android:layout_height="50dp"
			        android:layout_width="50dp"
			        android:background="@drawable/selector_dialog_num"

			        android:textColor="@color/gray_light"
			        android:textSize="@dimen/txtPin"
			        android:text="0"/>

			<Button
					android:id="@+id/btnOk"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/selector_dialog_num"
					android:textSize="@dimen/txtPin"

					android:text="ok"
					android:textColor="@color/gray_light"
					/>
		</TableRow>

	</TableLayout>


</RelativeLayout>