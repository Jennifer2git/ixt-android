	<GridView
			android:id="@+id/grid_movie_item"
			android:layout_width="1240dp"
			android:layout_height="576dp"
			android:layout_marginTop="135dp"
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="10dp"
			android:layout_marginBottom="60dp"
			android:numColumns="7"
			android:columnWidth="30dp"
			android:visibility="visible"
			>

	</GridView>


	<com.imax.ipt.ui.widget.gridview.TwoWayGridWidget
			android:id="@+id/gridview"
			android:layout_width="fill_parent"
			android:layout_height="510dip"
			android:layout_marginBottom="100dip"
			android:layout_marginTop="120dip"
			android:background="@color/gray_light_catalogue"
			android:fastScrollEnabled="false"
			android:focusable="true"
			android:listSelector="@color/electric_blue"
			app:cacheColorHint="@android:color/transparent"
			app:columnWidth="115dip"
			app:gravity="center"
			app:numColumns="7"
			app:numRows="auto_fit"
			app:rowHeight="170dip"
			app:scrollDirectionLandscape="horizontal"
			app:stretchMode="spacingWidthUniform"
			android:visibility="gone"
			>
	</com.imax.ipt.ui.widget.gridview.TwoWayGridWidget>

	<FrameLayout
			android:id="@+id/searchFragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="0dp"
			android:layout_marginTop="100dp"
			android:background="@android:color/transparent"

			>
	</FrameLayout>

	<FrameLayout
			android:id="@+id/statusNotificationLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="25dp"
			>

	</FrameLayout>

	<FrameLayout
			android:id="@+id/nowplayingFragment"
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
	        android:visibility="visible"
			>
	</FrameLayout>


</RelativeLayout>