	<FrameLayout
			android:id="@+id/alphabetPickerFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="80dip"
			android:layout_marginBottom="10dp"
			>
	</FrameLayout>

	<android.support.v4.view.ViewPager
			android:id="@+id/vp_movie_content"
			android:layout_width="fill_parent"
			android:layout_height="740dp"
			android:layout_marginTop="130dp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentLeft="true"
			android:background="@color/gray_light_catalogue"
			>

	</android.support.v4.view.ViewPager>

	<LinearLayout
			android:id="@+id/layout_pager_dot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="630dp"
			android:orientation="horizontal"
			android:layout_weight="1"
			android:divider="@drawable/diver_line"
			android:showDividers="middle">

		<ImageView
				android:id="@+id/imge_viewpager_dot1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/selector_viewpager_dot"
				android:visibility="gone"
				/>
		<!--         <ImageView
				android:id="@+id/imge_viewpager_dot2"
