<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true"><shape android:shape="rectangle">
		<stroke android:width="1.0px" android:color="@color/gray_light" />
		<gradient android:angle="45.0" android:endColor="#ffffff" android:startColor="#000000" />
	</shape></item>
	<item android:state_focused="true"><shape android:shape="rectangle">
		<gradient android:angle="45.0" android:endColor="#ffffff" android:startColor="#000000" />

		<stroke android:width="1.0px" android:color="@color/gold" />
	</shape></item>
	<item><shape android:shape="rectangle">
		<gradient android:type="sweep" android:angle="180.0" android:endColor="@color/night_blue" android:startColor="@android:color/transparent" />
		<stroke android:width="1.0px" android:color="@color/gray_light" />

	</shape></item>

</selector>