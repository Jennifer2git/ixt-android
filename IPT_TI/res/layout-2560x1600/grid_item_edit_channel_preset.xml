<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/tglPreset"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ipt_gui_asset_tv_source_btn_inactive" />

    <EditText
        android:id="@+id/txtChannelNumber"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_holo_dark"
        android:layout_y="48dp"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@android:color/white" />

        <EditText
        android:id="@+id/txtChannelDisplayName"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_holo_dark"
        android:layout_y="76dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:textColor="@android:color/white" />

</AbsoluteLayout>