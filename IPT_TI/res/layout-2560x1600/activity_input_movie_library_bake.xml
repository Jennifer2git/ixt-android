<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- android:background="@drawable/global_overlay_color" -->
    <!-- android:background="@drawable/ipt_gui_asset_bg" -->

    <FrameLayout
            android:id="@+id/masterMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutMediaLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            <FrameLayout
                    android:id="@+id/alphabetPickerFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    >
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                >

            <!--                 android:background="@android:color/transparent"
-->
            <com.imax.ipt.ui.widget.gridview.TwoWayGridWidget
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="510dip"
                android:layout_marginBottom="100dip"
                android:layout_marginTop="100dip"
                android:background="@color/gray_light_catalogue"
                android:fastScrollEnabled="false"
                android:focusable="true"
                android:listSelector="@color/electric_blue"
                app:cacheColorHint="@android:color/transparent"
                app:columnWidth="115dip"
                app:gravity="center"
                app:numColumns="7"
                app:numRows="auto_fit"
                app:rowHeight="170dip"
                app:scrollDirectionLandscape="horizontal"
                app:stretchMode="spacingWidthUniform"
                    >
            </com.imax.ipt.ui.widget.gridview.TwoWayGridWidget>
        </RelativeLayout>





    </FrameLayout>

    <ImageButton
            android:id="@+id/btnPreviousMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_remote_previous_menu_button"
            android:visibility="gone" />

    <com.imax.ipt.ui.layout.IPTTextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="90dip"
            android:gravity="center"
            android:text="@string/previous_menu"
            android:textAppearance="@style/smallActiveText"
            android:textSize="8pt"
            android:visibility="gone"
            android:id="@+id/previous_menu"
            />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="200dip"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_library_share_button"
        android:visibility="gone"
         />

    <FrameLayout
        android:id="@+id/searchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
            android:visibility="gone">
    </FrameLayout>

    <!--movie sort-->
    <FrameLayout
        android:id="@+id/menuLibraryFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        >
    </FrameLayout>

     <FrameLayout
        android:id="@+id/nowplayingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
    </FrameLayout>

     <FrameLayout
         android:id="@+id/statusNotificationLayout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="25dp"
             >

     </FrameLayout>



</RelativeLayout>