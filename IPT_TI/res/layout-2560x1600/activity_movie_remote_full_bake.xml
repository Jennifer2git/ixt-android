		android:layout_alignParentRight="true"
		android:layout_marginBottom="80dip"
		android:layout_marginRight="90dip"
		android:drawableTop="@drawable/selector_btn_zoom"
		android:background="@android:color/transparent"
		android:text="@string/zoom"
		android:textAppearance="@style/smallActiveText"
		android:textColor="#ffffff"
		android:textSize="15sp" />
<!--android:textSize="6pt" -->
    <ImageButton
        android:id="@+id/btnMultiview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dip"
        android:layout_marginRight="5dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_master_menu"
        android:src="@drawable/selector_remote_multiview_button"
        android:visibility="gone"

         />

    <Button
        android:id="@+id/btnVideoMode"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/selector_tv_num_full_button"
        android:text="@string/video_format"
        android:textAppearance="@style/smallActiveText"
        android:textColor="#ffffff"
        android:textSize="6pt"
        android:visibility="gone"
         />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_master_menu"
        android:src="@drawable/selector_back_button" />

    <HorizontalScrollView
        android:layout_width="1020dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="10dip" >

        <com.imax.ipt.ui.layout.IPTTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dip"
            android:scrollbarStyle="insideInset"
            android:singleLine="true"
            android:textAppearance="@style/ActiveText"
            android:textSize="62sp" />
    </HorizontalScrollView>


