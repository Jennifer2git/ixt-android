<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/global_overlay_color3">

	<LinearLayout
			android:id="@+id/ll_control_menuLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="255dp"
			android:layout_marginTop="7dp"
			android:gravity="center"
			android:divider="@drawable/diver_line"
			android:showDividers="middle">
		<ImageView
				android:id="@+id/img_nav_div_line_left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/global_div"
				android:contentDescription="NavigationMenu"/>


		<ImageButton
				android:id="@+id/btnOptionMenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:layout_marginRight="-3dp"
				android:background="@android:color/transparent"
				android:src="@drawable/selector_remote_movie_menu_button"/>

		<ImageButton
				android:id="@+id/btnMasterMenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:layout_marginLeft="-3dp"

				android:background="@android:color/transparent"
				android:src="@drawable/selector_remote_pop_up_menu_button"/>

	</LinearLayout>


	<LinearLayout
			android:id="@+id/ll_control_menu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="100dp"
			android:layout_alignParentTop="true"
			android:layout_marginTop="7dp"
			android:gravity="center"
			android:divider="@drawable/diver_line"
			android:showDividers="middle">

		<ImageButton
				android:id="@+id/btnBackMenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@android:color/transparent"
				android:src="@drawable/selector_remote_previous_menu_button"
				/>

		<ImageButton
				android:id="@+id/btnZoom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@android:color/transparent"

				android:src="@drawable/selector_btn_zoom"
				/>

		<!-- audio language-->
		<ImageButton
				android:id="@+id/btnNetVideo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@android:color/transparent"
				android:src="@drawable/selector_remote_audio_language_button"/>


		<ImageButton
				android:id="@+id/btnSubtitles"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@android:color/transparent"
				android:src="@drawable/selector_remote_subtitles_button"/>

		<ImageView
				android:id="@+id/img_nav_div_line_right"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/global_div"/>

	</LinearLayout>

	<FrameLayout
			android:id="@+id/fragment_volume_control"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="35dp"
			android:layout_alignParentBottom="true"
			>
	</FrameLayout>

