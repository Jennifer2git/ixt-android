	<ImageButton
			android:id="@+id/btnMultiview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="100dip"
			android:layout_marginRight="5dip"
			android:background="@android:color/transparent"
			android:contentDescription="@string/content_master_menu"
			android:src="@drawable/selector_remote_multiview_button"
			android:visibility="gone"
			/>

	<Button
			android:id="@+id/btnVideoMode"
			android:layout_width="73dp"
			android:layout_height="74dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="200dip"
			android:layout_marginRight="15dip"
			android:background="@drawable/selector_tv_num_full_button"
			android:text="@string/video_format"
			android:textAppearance="@style/smallActiveText"
			android:textColor="#ffffff"
			android:textSize="6pt"
			android:visibility="gone"/>

	<com.imax.ipt.ui.layout.IPTTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="130dip"
			android:layout_marginRight="90dip"
			android:text="@string/multiview"
			android:textAppearance="@style/smallActiveText"
			android:textSize="8pt"
			android:id="@+id/multview"
			android:visibility="gone"
			/>

	<ImageButton
			android:id="@+id/btnBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="5dip"
			android:layout_marginTop="5dip"
			android:background="@android:color/transparent"
			android:contentDescription="@string/content_master_menu"
			android:src="@drawable/selector_back_button"
			android:visibility="gone"/>

	<HorizontalScrollView
			android:id="@+id/hs_title"
			android:layout_width="1020dip"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/disNowPlayingTitle">

		<com.imax.ipt.ui.layout.IPTTextView
				android:id="@+id/txtTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:scrollbarStyle="insideInset"
				android:singleLine="true"
				android:textAppearance="@style/InActiveText"
				android:textSize="@dimen/txtNowPlayTitle"
				android:text="NOW PLAYING ..."
				/>
	</HorizontalScrollView>

	<ImageButton
			android:id="@+id/btnVolMute"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="50dip"
			android:background="@android:color/transparent"
			android:src="@drawable/selector_vol_mute_button"
			android:visibility="gone"/>

