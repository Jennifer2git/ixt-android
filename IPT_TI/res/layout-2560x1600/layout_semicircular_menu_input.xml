<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.imax.ipt.ui.widget.semicircular.SemiCircularLayout
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-160dip"
        custom:childSize="100dip"
        custom:fromDegrees="120"
        custom:initialRadius="@integer/input_radius_int"
        custom:toDegrees="240" />

    <FrameLayout
        android:id="@+id/control_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/control_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/selector_menu_input_button" />

            <com.imax.ipt.ui.layout.IPTTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/control_hint"
                android:layout_marginLeft="35dip"
                android:text="@string/inputs"
                android:textSize="@dimen/menu_txt_size" />
        </RelativeLayout>
    </FrameLayout>

</merge>