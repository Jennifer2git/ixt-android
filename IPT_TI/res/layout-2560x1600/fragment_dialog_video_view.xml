<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_menu" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btnVideoMode2D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="2D"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnVideoMode3DFp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="3DFP"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnVideoMode3DSs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="3DSS"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnVideoMode3DTb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="3DTB"
            android:textColor="@android:color/white"/>

    </LinearLayout>

        <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/linearLayout1"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_close_button" />

    <LinearLayout
        android:id="@+id/layoutAspectRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnAspectRatioHd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="HD"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnAspectRatioScope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ipt_gui_asset_video_mode_2d_inactive"
            android:text="Scope"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>