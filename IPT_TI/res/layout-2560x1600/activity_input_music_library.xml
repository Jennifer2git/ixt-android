<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ipt_gui_asset_bg" >

    <FrameLayout
        android:id="@+id/frameLayoutMediaLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.imax.ipt.ui.widget.gridview.TwoWayGridWidget
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="510dip"
                android:layout_marginBottom="100dip"
                android:layout_marginTop="100dip"
                android:background="@android:color/transparent"
                app:cacheColorHint="@android:color/transparent"
                app:columnWidth="170dp"
                app:gravity="center"
                app:numColumns="auto_fit"
                app:numRows="3"
                app:rowHeight="170dp"
                app:scrollDirectionLandscape="horizontal"
                app:stretchMode="columnWidth" >
            </com.imax.ipt.ui.widget.gridview.TwoWayGridWidget>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:id="@+id/searchFragment"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >
            </FrameLayout>

            <View
                android:id="@+id/edge_shadow_left"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ipt_gui_asset_library_edge_shadow_left" />

            <FrameLayout
                android:id="@+id/alphabetPickerFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="350dip"
                android:layout_marginTop="580dip" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/menuLibraryFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>

            <View
                android:id="@+id/edge_shadow_right"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ipt_gui_asset_library_edge_shadow_rigth" />
        </RelativeLayout>
    </FrameLayout>

    		<ImageButton
	        android:id="@+id/shareButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="200dip"
	        android:background="@android:color/transparent"
	        android:src="@drawable/selector_library_share_button" />

     <FrameLayout
         android:id="@+id/statusNotificationLayout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/masterMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/nowplayingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
    </FrameLayout>

</RelativeLayout>