<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is proper the menu , We have only 1 user interface -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/IPTTextView02"
			style="@style/smallInActiveText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="540dp"
			android:layout_marginTop="175dp"
			android:text="@string/zaxel_describ"
			android:textSize="22sp"
			/>
	<Button
			android:id="@+id/btnDemoMode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/IPTTextView02"
			android:layout_marginLeft="10dp"
			android:layout_alignBottom="@id/IPTTextView02"
			android:background="@drawable/selector_btn_demo_mode"
			android:text="OFF"
	        android:textColor="@color/gold"
			/>


	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/btnSimple1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_x="720dp"
			android:layout_y="138dp"
			android:text="@string/off"
			android:textAppearance="@style/smallInActiveText"
			android:textSize="22sp"
	        android:visibility="gone"
			/>
	<com.imax.ipt.ui.util.MySwitch
			android:id="@+id/btnSimpleFull1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="28dp"
			android:layout_marginRight="60dp"
			android:background="@drawable/system_demo__sliderbg_icn"
			android:layout_x="755dp"
			android:layout_y="127dp"
			android:visibility="gone"

			/>

	<com.imax.ipt.ui.layout.IPTTextView
			android:id="@+id/btnFull1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_x="870dp"
			android:layout_y="138dp"
			android:layout_marginBottom="30dip"
			android:layout_marginRight="25dip"
			android:text="@string/on"
			android:textAppearance="@style/smallActiveText"
			android:textSize="22sp"
			android:visibility="gone"

			/>

</RelativeLayout>