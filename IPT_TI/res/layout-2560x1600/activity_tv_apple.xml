<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ipt_gui_asset_bg" >

    <ImageButton
        android:id="@+id/btnVolMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dip"
        android:layout_x="6dp"
        android:layout_y="634dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_vol_mute_button" />

    <com.imax.ipt.ui.widget.verticalseekbar.VerticalSeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="wrap_content"
        android:layout_height="363dp"
        android:layout_x="6dp"
        android:layout_y="208dp"
        android:progressDrawable="@drawable/selector_vol_seek_bar"
        android:thumb="@drawable/ipt_gui_asset_vol_knob_active_down" />

    <com.imax.ipt.ui.layout.IPTTextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="40dp"
        android:text="@string/now_playing"
        android:textSize="30pt" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="2dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_back_button" />

    <!--
         <ToggleButton
        android:id="@+id/btnSimpleFull"
        android:layout_width="wrap_content"
