    <ImageButton
        android:id="@+id/btnMultiview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1179dp"
        android:layout_y="560dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_master_menu"
        android:src="@drawable/selector_remote_multiview_button" />

    <com.imax.ipt.ui.layout.IPTTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1098dp"
        android:layout_y="596dp"
        android:text="@string/multiview"
        android:textAppearance="@style/smallActiveText"
        android:textSize="8pt" />

    <FrameLayout
        android:id="@+id/statusNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp" >
    </FrameLayout>

    <!--
    <FrameLayout
        android:id="@+id/masterMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
    -->

    <com.imax.ipt.ui.layout.IPTTextView
        android:id="@+id/txtTvOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="80dip"
        android:layout_x="608dp"
        android:layout_y="273dp"
        android:text="@string/ok"
        android:textAppearance="@style/InActiveText"
        android:textSize="18pt" />

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="586dp"
        android:layout_y="168dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_remote_arrow_up_button" />

    <ImageButton
        android:id="@+id/btnRigth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="677dp"
        android:layout_y="249dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_remote_arrow_rigth_button" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="503dp"
        android:layout_y="247dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_remote_arrow_left_button" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="592dp"
        android:layout_y="332dp"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_remote_arrow_down_button" />

    <View
        style="@style/InActiveText"
        android:layout_width="220dp"
        android:layout_height="219dp"
        android:layout_marginLeft="510dip"
        android:layout_marginTop="120dip"
        android:layout_x="525dp"
        android:layout_y="185dp"
        android:background="@drawable/outerring" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="515dp"
        android:layout_y="441dp"
        android:background="@drawable/selector_tv_num_full_button"
        android:text="@string/menu"
        android:textColor="#ffffff"
        android:textSize="8pt" />

        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_x="640dp"
            android:layout_y="441dp"
            android:background="@drawable/selector_remote_full_play_pause_button"
            android:textColor="#ffffff"
            android:textSize="8pt" />

        <FrameLayout
        android:id="@+id/masterMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</AbsoluteLayout>